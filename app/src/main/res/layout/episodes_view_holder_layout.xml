<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/episode_episode_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:textSize="16sp"
        app:fontFamily="sans-serif-medium"
        tools:text="S01E03"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/episode_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@id/episode_episode_text_view"
        tools:text="Episode Name"/>

    <TextView
        android:id="@+id/episode_air_date_text_view"
        android:layout_width="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/episode_name_text_view"
        tools:text="Air date: December 1, 2017"/>

</androidx.constraintlayout.widget.ConstraintLayout>